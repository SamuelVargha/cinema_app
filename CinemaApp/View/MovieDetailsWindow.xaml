<Window x:Class="CinemaApp.View.MovieDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Movie Details"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="WindowDrag">

    <!-- Rounded gradient border -->
    <Border CornerRadius="14"
            BorderBrush="MediumSlateBlue"
            BorderThickness="3">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- control bar -->
                <RowDefinition Height="*"/>
                <!-- content -->
            </Grid.RowDefinitions>

            <!-- Custom top bar -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,5,0">
                <Button Style="{StaticResource RoundIconButton}"
                        x:Name="btnClose"
                        Width="25"
                        Height="25"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark"
                                  Foreground="MediumSlateBlue"
                                  Width="14"
                                  Height="14"/>
                </Button>
            </StackPanel>

            <!-- Main content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25" HorizontalAlignment="Center">

                    <!-- Poster image -->
                    <Image Source="{Binding PosterPath}" 
                           Height="250" 
                           Width="300"
                           Stretch="UniformToFill"
                           Margin="0,0,0,15">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,250"/>
                        </Image.Clip>
                    </Image>

                    <!-- Title -->
                    <TextBlock Text="{Binding Title}" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- Description -->
                    <TextBlock Text="{Binding Description}"
                               FontSize="14"
                               Foreground="#DDDDDD"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,25"
                               Width="320"/>

                    <!-- Rounded button style -->
                    <Button Style="{StaticResource RoundedHoverButton}"
                            Content="VIEW SCREENINGS"
                            Width="150"
                            Height="35"
                            HorizontalAlignment="Center"
                            Click="ViewScreenings_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
