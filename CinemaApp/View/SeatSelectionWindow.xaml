<Window x:Class="CinemaApp.View.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Seat Selection"
        Width="600"
        Height="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="WindowDrag">

    <Border CornerRadius="14" BorderBrush="MediumSlateBlue" BorderThickness="3">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2A2A2A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Close Button -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Button Width="25"
                        Height="25"
                        Background="#222"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click">
                    <fa:IconImage Icon="Xmark"
                                  Width="14"
                                  Height="14"
                                  Foreground="MediumSlateBlue"/>
                </Button>
            </StackPanel>

            <!-- Screen Indicator -->
            <Rectangle Grid.Row="1"
                       Height="20"
                       RadiusX="8"
                       RadiusY="8"
                       Fill="#AAFF0000"
                       StrokeThickness="0"
                       Margin="50,10,50,10"/>

            <!-- Seats Grid -->
            <ItemsControl x:Name="SeatGrid"
                          Grid.Row="2"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!-- Reserve Button -->
            <Button Grid.Row="3"
                    Content="RESERVE SEATS"
                    Width="200"
                    Height="40"
                    HorizontalAlignment="Center"
                    Background="{StaticResource loginBtnColor1}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Reserve_Click"/>
        </Grid>
    </Border>
</Window>
