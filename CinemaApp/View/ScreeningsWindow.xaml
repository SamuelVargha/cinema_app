<Window x:Class="CinemaApp.View.ScreeningsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Screenings"
        Width="400"
        Height="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="WindowDrag">

    <Border CornerRadius="14"
            BorderBrush="MediumSlateBlue"
            BorderThickness="3">

        <!-- Background -->
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2A2A2A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Top bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- TOP BAR WITH CLOSE BUTTON -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,5,0">

                <Button Width="25"
                        Height="25"
                        Background="#333"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                                <fa:IconImage Icon="Xmark"
                                              Foreground="MediumSlateBlue"
                                              Width="12" Height="12"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#333"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#555"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <!-- Movie Title -->
                    <TextBlock Text="{Binding Title}"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0 0 0 20"/>

                    <!-- Screenings List -->
                    <ItemsControl ItemsSource="{Binding Screenings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <Button Style="{StaticResource ScreeningButtonStyle}" Click="Screening_Click">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Date}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Time}" FontSize="14" Foreground="#DDDDDD"/>
                                        <TextBlock Text="{Binding Hall}" FontSize="14" Foreground="#AAAFFF"/>
                                    </StackPanel>
                                </Button>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>
</Window>
