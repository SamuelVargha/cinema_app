<UserControl x:Class="CinemaApp.View.ScreeningsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding AllScreenings}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.SelectScreeningCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Margin="5"
                            Padding="10"
                            Background="#1F1F1F"
                            BorderBrush="MediumSlateBlue"
                            BorderThickness="2"
                            Cursor="Hand">

                        <StackPanel>
                            <TextBlock Text="{Binding MovieTitle}" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding Date}" 
                                       Foreground="#CCCCCC"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding Time}" 
                                       Foreground="#AAAAFF"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding Hall}" 
                                       Foreground="#AAAAFF"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
